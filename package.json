{
	"name": "node-red-contrib-zwave-js",
	"version": "10.0.0",
	"license": "MIT",
	"description": "The most powerful, high performing and highly polished Z-Wave node for Node-RED based on Z-Wave JS. If you want a fully featured Z-Wave framework in your Node-RED instance, you have found it.",
	"dependencies": {
		"limiter": "^2.1.0",
		"lodash": "^4.17.21",
		"node-red": "^3.1.0",
		"zwave-js": "^12.1.1"
	},
	"devDependencies": {
		"@types/node": "^18.0.0",
		"@types/node-red": "^1.3.2",
		"@typescript-eslint/eslint-plugin": "6.7.5",
		"@typescript-eslint/parser": "6.7.5",
		"eslint": "^8.51.0",
		"prettier": "^3.0.3"
	},
	"scripts": {
		"validate": "node-red-dev validate -o validation_result.json",
		"setup-dev": "npm install && npm run setup-debug",
		"setup-debug": "npm run debug-make-folders && npm run debug-install-nr",
		"clean-debug": "rm -r ../DebugENV",
		"debug-make-folders": "mkdir -p ../DebugENV && mkdir -p ../DebugENV/DebugHome/node_modules",
		"debug-install-nr": "npm --prefix ../DebugENV install node-red && ln -s $(PWD) ../DebugENV/DebugHome/node_modules/${PWD##*/}",
		"debug": "npm run build && node ../DebugENV/node_modules/node-red/red.js --userDir ../DebugENV/DebugHome",
		"build": "npm run clean && tsc",
		"clean": "rimraf build/**/*.js"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"keywords": [
		"node-red",
		"zwave",
		"zwave-js",
		"controller",
		"smart",
		"automation",
		"home-automation",
		"home"
	],
	"node-red": {
		"version": ">=2.0.0",
		"nodes": {
			"zwavejs-runtime": "build/nodes/ZWaveJSRuntime.js",
			"zwavejs-controller": "build/nodes/ZWaveJSController.js",
			"zwavejs-device": "build/nodes/ZWaveJSDevice.js",
			"zwavejs-filter": "build/nodes/ZWaveJSFilter.js",
			"zwavejs-factory": "build/nodes/ZWaveJSFactory.js"
		},
		"plugins": {
			"ui-bootstrap": "build/plugins/UIBootstrap.js"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/zwave-js/node-red-contrib-zwave-js.git"
	},
	"author": {
		"name": "Marcus Davies",
		"email": "marcus.davies83@icloud.com"
	},
	"contributors": [
		{
			"name": "hufftheweevil (Justin)",
			"url": "https://github.com/hufftheweevil"
		},
		{
			"name": "crxporter",
			"url": "https://github.com/crxporter"
		}
	],
	"bugs": {
		"url": "https://github.com/zwave-js/node-red-contrib-zwave-js/issues"
	},
	"homepage": "https://github.com/zwave-js/node-red-contrib-zwave-js#readme"
}
